<div class="card mt-4 mx-auto w-75">
    <div class="card-body">
        <h2 class="text-center">Add New Idea</h2>
        <form action="/newidea" method="post">
            <div class="form-group">
                <label for="idea">Idea:</label>
                <input required type="text" class="form-control" id="idea" name="idea">
            </div>
            <div class="form-group">
                <label for="details">Details:</label>
                <textarea required name="details" id="details" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>