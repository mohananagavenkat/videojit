{{#each errors}}
<div class="alert alert-danger">{{ message }}</div>
{{else}} {{/each}}
<div class="card">
    <div class="card-body">
        <h2 class="text-center">Edit Idea</h2>
        <form action="/ideas/edit/{{ idea._id }}" method="post">
            <div class="form-group">
                <label for="idea">Idea:</label>
                <input required type="text" class="form-control" id="idea" name="idea" value="{{ idea.idea }}">
            </div>
            <div class="form-group">
                <label for="details">Details:</label>
                <textarea required name="details" id="details" class="form-control">{{ idea.details }}</textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>